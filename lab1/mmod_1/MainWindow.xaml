        </Button>
        <Button x:Name="btn_task3" Content="Task 3" HorizontalAlignment="Left" Margin="11,99,0,0" VerticalAlignment="Top" Height="50" Width="110" Foreground="White" FontFamily="Comic Sans MS" FontSize="20" Click="btn_task3_Click" >

                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="btn_task4" Content="Task 4" HorizontalAlignment="Left" Margin="172,99,0,0" VerticalAlignment="Top" Height="50" Width="110" Foreground="White" FontFamily="Comic Sans MS" FontSize="20" Click="btn_task4_Click" >

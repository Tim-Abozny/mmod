                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="btn_task2" Content="Task 2" HorizontalAlignment="Left" Margin="172,25,0,0" VerticalAlignment="Top" Height="50" Width="110" Foreground="White" FontFamily="Comic Sans MS" FontSize="20" Click="btn_task2_Click" >

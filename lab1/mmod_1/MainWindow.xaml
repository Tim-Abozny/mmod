        </Grid.Background>
        <Button x:Name="btn_task1" Content="Task 1" HorizontalAlignment="Left" Margin="11,25,0,0" VerticalAlignment="Top" Height="50" Width="110" Foreground="White" FontFamily="Comic Sans MS" FontSize="20" Click="btn_task1_Click" >
